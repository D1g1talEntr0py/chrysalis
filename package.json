{
  "name": "@d1g1tal/chrysalis",
  "version": "1.2.3",
  "author": "Jason DiMeo",
  "license": "MIT",
  "description": "JavaScript Utility Modules and Extensions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/D1g1talEntr0py/chrysalis.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./modules.js"
    },
    "./ext/*": {
      "import": "./src/ext/*"
    }
  },
  "files": [
    "/src/**/*",
    "./modules.js",
    "./extensions.js"
  ],
  "scripts": {
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "d.ts": "tsc --allowJs -declaration --emitDeclarationOnly --declarationMap --skipLibCheck --lib esnext modules.js",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "devDependencies": {
    "eslint": "^8.39.0",
    "eslint-plugin-compat": "^4.1.4",
    "eslint-plugin-jsdoc": "^43.1.1",
    "jest": "^29.5.0"
  },
  "browserslist": [
    "defaults",
    "not ios_saf < 15",
    "not op_mini all"
  ],
  "jest": {
    "verbose": true,
    "transform": {},
    "coverageDirectory": "./tests/coverage/",
    "coveragePathIgnorePatterns": [
      ".d.ts",
      "<rootDir>/src/js/ext/",
      "/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*"
    ]
  },
  "keywords": [
    "utilities"
  ]
}
